@page
@model Session1.Pages.bikeType.IndexModel

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                 Bike Type List
            </h2>
        </div>
        <div class="col-6 text-end">
           <a asp-page="create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp create new bike type
           </a>
        </div>
    </div>
   
</div>

<table class="table table-bordered table-striped" style="width:100%">  
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.bikeTypes)
        {
            @if (obj.Name.Contains("$"))
            {
                
            }
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.Size</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </div>
    
                </td>
            </tr>
        }
    </tbody>
</table>