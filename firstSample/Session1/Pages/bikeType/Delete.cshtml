@page
@model Session1.Pages.bikeType.DeleteModel
@{
}

<form method="post">
    <input hidden asp-for="BikeType.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Bike Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="BikeType.Name" class="form-control"></label>
            <input asp-for="BikeType.Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Size" class="form-control"></label>
            <input asp-for="@Model.BikeType.Size" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to the list</a>
    </div>
    

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}