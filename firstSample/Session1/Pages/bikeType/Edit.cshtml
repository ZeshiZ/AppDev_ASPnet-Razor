@page
@model Session1.Pages.bikeType.EditModel
@{
}

<form method="post">
    <input hidden asp-for="BikeType.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Bike Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="BikeType.Name" class="form-control"></label>
            <input asp-for="BikeType.Name" class="form-control" />
            <span asp-validation-for="BikeType.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Size" class="form-control"></label>
            <input asp-for="@Model.BikeType.Size" class="form-control" />
            <span asp-validation-for="BikeType.Size" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to the list</a>
    </div>
    

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}